                                    <img style="width:100%; height: 100%;border-radius: 1em;" src="@imgSrc" />
                                </div>

                                <div class="itemName" style=" font-size: 13px; height: 2.2em; background-color:black; color: white; text-align:center;overflow: auto;">
                                    @item.ItemName
                                </div>

