                                <div class="createdAt">
                                    <small>created at : @item.CreatedAt</small>
                                </div>

                                <div class="Price" style=" color: black;">
                                    <b>@price</b>
                                </div>
                                <div style="clear:both;"></div>
                                <b><hr style=" margin-top: -3px; color:black" /></b>
