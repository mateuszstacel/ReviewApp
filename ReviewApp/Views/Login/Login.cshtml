@{
    Layout = "_LayoutLogin";
    string message = @ViewBag.message;
    string classinf = ViewBag.classinfo;
}

    <div id="errorContainer">
        <h3>
           @Html.ValidationSummary(false, message, new { @class = classinf})
        </h3> 

    </div>



<div id="RegisterHere">

    <h4 id="registerSign">Register here</h4>

    <div id="backToLogin">
        <h4>X</h4>
    </div>

</div>

<div id="loginContainer">


    <div id="form" class="form-size">
        <div id="logo">
            <img class="image" src="~/images/5-stars-transparent-3.png" />
            <img class="image" src="~/images/loginLogo.png" />
        </div>
        <br />
        <form asp-controller="Login" asp-action="Login" method="post">
            <br />
            <label>Login</label>
            <input class="form-control" type="text" name="login" value="" required />
            <br />
            <label>Password</label>
            <input class="form-control" type="password" name="password" value="" required />
            <br /> <br />
            <button id="login-button" class="btn btn-default btn-lg" type="submit">Login</button>
        </form>
    </div>


    <div class="form-size" id="registrationForm" style="display:none;">
        <div id="form" style="" >
            <div id="logo">
                <img class="image" src="~/images/5-stars-transparent-3.png" />
                <img class="image" src="~/images/loginLogo.png" />
            </div>

            <form asp-controller="Login" asp-action="Register" method="post">
                <br />
                <label>First Name</label>
                <input class="form-control" type="text" name="firstName" value="" required />
                
                <br />
                <label>Last Name</label>
                <input class="form-control" type="text" name="lastName" value="" required />
                
                <br />
                <label>Login</label>
                <input class="form-control" type="text" name="login" value="" required />
                <br />
                <label>Password</label>
                <input class="form-control" type="password" name="password" value="" required />
                <br />
                <label>Email Contact</label>
                <input class="form-control" type="email" name="email" value="" required />
                <br /> <br />
                <button id="Register-button" class="btn btn-default btn-lg" type="submit">Register</button><br /><br />
            </form>
        </div>

    </div>

</div>



<script src="~/js/login.js"></script>
<link href="~/css/login.css" rel="stylesheet" />