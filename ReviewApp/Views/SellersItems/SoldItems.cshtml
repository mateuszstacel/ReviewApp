
@{
    Layout = "_LayoutSeller";
}


@if (ViewBag.itemsList.Count != 0)
{
    @foreach (var item in ViewBag.itemsList)
    {

        var base64 = Convert.ToBase64String(item.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        //  <img style="width:100px; height: 100px;" src="@imgSrc" />
        string price = item.Price + "£";

        if (item.KeyWords == "pending")
        {
            <div style="background-color:aliceblue; text-align:center;padding:10px; border-radius: 1em; margin-top:35px; width:100%; height: 220px;" class="pending">

                <div style="padding:3px; margin-top:-10px; color: black;text-align: left;" id=" purchasedAT">
                    <small>purchased at : @item.CreatedAt</small>

                </div>
                <div style="float:right;">
                    <b style=" color:black;">@price</b>
                </div>


                <div class="photoOutside" margin-top: 20px; style="border-radius: 1em;float:left; height:85%; width:35%; color: black;">
                    <img style="width:100%; height: 100%;border-radius: 1em" src="@imgSrc" />
                </div>

                <div style="color:orangered; text-align:left;margin-left:37%; width: 63%; height:auto;">
                    <b>Status:</b> In Progress
                </div>

                <div style="margin-top:5px; margin-left:37%; color: black; width: 63%; height:auto;">
                    <b>@item.ItemName</b>
                </div>


                <div style="text-align:left;margin-top:5px; margin-left:37%; color: black; width: 63%; height:auto;">
                    <b>OrderNum :</b> @item.Description <br>
                    <b>Paypal for refund :</b> @ViewBag.Paypal
                </div>
                <div style="margin-top:5px; margin-left:37%;color: black; width: 63%; height:auto;">
                    <br />


                    <div style="">

                        <small>Once Review will be live we let you know</small>

                    </div>

                </div>

            </div>
        }
        if (item.KeyWords == "reviewLive")
        {
            <div style="background-color:aliceblue; text-align:center;padding:10px; border-radius: 1em; margin-top:35px; width:100%; height: 220px;" class="reviewIsLive">

                <div style="padding:3px; margin-top:-10px; color: black;text-align: left;" id=" purchasedAT">
                    <small>purchased at : @item.CreatedAt</small>

                </div>
                <div style="float:right;">
                    <b style=" color:black;">@price</b>
                </div>


                <div class="photoOutside" margin-top: 20px; style="border-radius: 1em;float:left; height:85%; width:35%; color: black;">
                    <img style="width:100%; height: 100%;border-radius: 1em" src="@imgSrc" />
                </div>

                <div style="color:yellow; text-align:left;margin-left:37%; width: 63%; height:auto;">
                    <b>Status:</b> Review is Live
                </div>

                <div style="margin-top:5px; margin-left:37%; color: black; width: 63%; height:auto;">
                    <b>@item.ItemName</b>
                </div>


                <div style="text-align:left;margin-top:5px; margin-left:37%; color: black; width: 63%; height:auto;">
                    <b>OrderNum :</b> @item.Description <br>
                    <b>Paypal for refund :</b> @ViewBag.Paypal
                </div>
                <div style="margin-top:5px; margin-left:37%;color: black; width: 63%; height:auto;">
                    <br />


                    <div style="">

                        <b>Please Arrange Refund ASAP</b>

                    </div>

                </div>

            </div>
        }
        if (item.KeyWords == "completed")
        {
            <div style="background-color:aliceblue; text-align:center;padding:10px; border-radius: 1em; margin-top:35px; width:100%; height: 220px;" class="completed">

                <div style="padding:3px; margin-top:-10px; color: black;text-align: left;" id=" purchasedAT">
                    <small>purchased at : @item.CreatedAt</small>

                </div>
                <div style="float:right;">
                    <b style=" color:black;">@price</b>
                </div>


                <div class="photoOutside" margin-top: 20px; style="border-radius: 1em;float:left; height:85%; width:35%; color: black;">
                    <img style="width:100%; height: 100%;border-radius: 1em" src="@imgSrc" />
                </div>

                <div style="color:green; text-align:left;margin-left:37%; width: 63%; height:auto;">
                    <b>Status:</b> Completed
                </div>

                <div style="margin-top:5px; margin-left:37%; color: black; width: 63%; height:auto;">
                    <b>@item.ItemName</b>
                </div>


                <div style="text-align:left;margin-top:5px; margin-left:37%; color: black; width: 63%; height:auto;">
                    <b>OrderNum :</b> @item.Description <br>
                    <b>Paypal for refund :</b> @ViewBag.Paypal
                </div>
                <div style="margin-top:5px; margin-left:37%;color: black; width: 63%; height:auto;">
                    <br />


                    <div style="">

                        <b style=" color:green">Completed!</b>

                    </div>

                </div>

            </div>
        }





    }

}
else
{
    <h1 style=" color : white; text-align: center; margin-top: 20%;">You didn't have any sold items, we will notify by the email after purchase.</h1>
}



<style>

    .pending {
        -webkit-box-shadow: -1px 2px 10px 3px rgba(255,89,0,1);
        -moz-box-shadow: -1px 2px 10px 3px rgba(255,89,0,1);
        box-shadow: -1px 2px 10px 3px rgba(255,89,0,1);
    }

    .reviewIsLive {
        -webkit-box-shadow: 0px 1px 16px 8px rgba(240,240,5,1);
        -moz-box-shadow: 0px 1px 16px 8px rgba(240,240,5,1);
        box-shadow: 0px 1px 16px 8px rgba(240,240,5,1);
    }

    .completed {
        -webkit-box-shadow: -1px 2px 10px 3px rgba(30,230,30,1);
        -moz-box-shadow: -1px 2px 10px 3px rgba(30,230,30,1);
        box-shadow: -1px 2px 10px 3px rgba(30,230,30,1);
        background-image: url('../../wwwroot/images/completed.jpg');
    }
</style>
